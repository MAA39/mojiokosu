{
  "name": "mojiokosu",
  "version": "0.1.0",
  "description": "話すだけで入力欄に文字が入る Chrome拡張。外部送信ゼロ、履歴保存なし。",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "zip": "cd extension/dist && zip -r ../../mojiokosu-extension.zip . -x '*.map'"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "vite": "^5.1.0",
    "vite-plugin-static-copy": "^1.0.0"
  },
  "keywords": [
    "chrome-extension",
    "speech-recognition",
    "voice-input",
    "japanese",
    "privacy-focused",
    "gemini-nano"
  ],
  "author": "MAA39",
  "license": "MIT"
}
