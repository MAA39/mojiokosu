{
  "manifest_version": 3,
  "name": "Mojiokosu（文字起こす）",
  "version": "0.1.0",
  "description": "話すだけで入力欄に文字が入る。外部送信ゼロ、履歴保存なし。",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Mojiokosu - 音声文字起こし",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "options_page": "options/index.html",

  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Alt+L",
        "mac": "Alt+L"
      },
      "description": "音声文字起こしの開始/停止"
    }
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "web_accessible_resources": [
    {
      "resources": ["styles/overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
